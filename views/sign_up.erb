    <style>
      .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #5a5c51;
        opacity: 0.5;
        z-index:1;
      }
      .nav {
        float: left;
      }
      .nav a {
        font-size: 16px;
        display: block;
        color: #dddfd4;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }
      .nav a:hover {
