      input[type="text"] {
        border-radius: 5px;
        font-size: 22px;
        width: 100%;
      }
      input[type="password"] {
        border-radius: 5px;
        font-size: 22px;
        width: 100%;
      }

      label {
        font-size: 18px;
      }


      h3 {
        text-align: center;
      }
      .radio {
        margin-left: 70px; 
